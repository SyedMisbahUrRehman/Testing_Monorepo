{
  "name": "vue-nest-monorepo",
  "version": "1.0.0",
  "description": "A monorepo containing Vue frontend and NestJS backend",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev --workspace=@monorepo/backend",
    "dev:frontend": "npm run dev --workspace=@monorepo/frontend",
    "build": "npm run build --workspaces",
    "build:backend": "npm run build --workspace=@monorepo/backend",
    "build:frontend": "npm run build --workspace=@monorepo/frontend",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "npm run start --workspace=@monorepo/backend",
    "start:frontend": "npm run start --workspace=@monorepo/frontend",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "test": "npm run test --workspaces",
    "clean": "npm run clean --workspaces && rimraf node_modules",
    "install:all": "npm install"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
